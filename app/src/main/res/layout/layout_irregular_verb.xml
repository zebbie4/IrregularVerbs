<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/iv_irregular_layout_size"
    android:background="@drawable/list_view_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_irregular_verbs_image"
        android:layout_width="@dimen/iv_irregular_layout_size"
        android:layout_height="match_parent"
        android:padding="@dimen/iv_irregular_image_padding"
        android:src="@drawable/norway_flag_icon" />

    <LinearLayout
        android:id="@+id/list_irregular_verbs_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/list_irregular_verbs_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="First line"
            android:textColor="@android:color/white"
            android:textSize="@dimen/iv_irregular_text_size_main"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_irregular_verbs_sub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Second line"
            android:textColor="@android:color/white"
            android:textSize="@dimen/iv_irregular_text_size_sub"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
